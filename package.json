{
  "name": "habitica-chat-client",
  "version": "1.4.5",
  "private": true,
  "description": "A Chrome extension for Habitica chat.",
  "main": "index.js",
  "scripts": {
    "build:chat": "browserify src/js/pages/chat > extension/chat/chat.js",
    "build:options": "browserify src/js/pages/options > extension/options-page/options.js",
    "build": "npm-run-all --parallel build:*",
    "development": "watch 'npm run build' src/js/ --wait=1",
    "lint": "eslint src test",
    "test": "mocha test --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HabitRPG/habitica-chat-extension.git"
  },
  "keywords": [],
  "author": "Habitica",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HabitRPG/habitica-chat-extension/issues"
  },
  "homepage": "https://github.com/HabitRPG/habitica-chat-extension#readme",
  "devDependencies": {
    "brfs": "^1.4.3",
    "browserify": "^14.4.0",
    "chai": "^4.1.2",
    "eslint": "^3.19.0",
    "eslint-config-habitrpg": "^3.0.0",
    "mocha": "^3.5.3",
    "npm-run-all": "^4.1.1",
    "sinon": "^4.0.0",
    "sinon-chai": "^2.14.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "habitica": "^4.0.0",
    "habitica-avatar": "^0.2.0",
    "habitica-markdown": "^1.3.0"
  },
  "browserify": {
    "transform": [
      "brfs"
    ]
  }
}
